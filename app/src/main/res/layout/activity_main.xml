<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/main_puppy_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="강아지 이름"
            android:font="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/main_go_my_page_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mypage" />

    </LinearLayout>

    <ImageView
        android:id="@+id/current_act_img"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ic_test"
        app:layout_constraintBottom_toTopOf="@+id/simple_calendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_title_ll"
        app:layout_constraintVertical_bias="0.317" />

    <ImageView
        android:id="@+id/main_go_behavior_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_behavior"
        app:layout_constraintEnd_toEndOf="@+id/current_act_img"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="@+id/current_act_img"
        app:layout_constraintTop_toTopOf="@+id/current_act_img" />

    <LinearLayout
        android:id="@+id/simple_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="25dp"
        app:layout_constraintBottom_toTopOf="@+id/weeklyCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="25dp"
            android:font="@font/roboto_bold"
            android:text="5월 둘째 주"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/go_calendar_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_calendar" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/weeklyCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingEnd="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <LinearLayout
            android:id="@+id/first_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="일"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon1"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/second_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="월"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/third_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="화"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon3"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon4"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="목"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date5"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon5"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/sixth_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="금"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date6"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon6"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventh_of_week"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/main_day7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="토"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/main_date7"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ff0000"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/main_icon7"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/dog" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>